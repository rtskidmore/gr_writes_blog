<%- include('partials/header') %>

<div class="home-top" style="background-image: url('https://images.unsplash.com/photo-1453090643118-eae60f5bc58a?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1170&q=80');">
    <div class="top-content">
        <h1>G. R. Writes...</h1>
            <hr>
        <h3>One album at a Time</h3>
    </div>
</div>

<% blogs.forEach(function(blog) { %>
    <div class="blog-full">
        <img class="blog-photo" src="<%= blog.img_url %>" alt="Album img">
        <div class="home-content">
        <h1><%= blog.title %></h1>
        <p><%= blog.content.substring(0, 300) + "..." %><a href="/posts/<%= blog._id %>">Continue Reading</a></p>
    </div>
    </div>
    <hr>
<% }) %>


<%- include('partials/footer') %>